<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ivan.infotechpvt.stuffyrider.Editprofile"
    android:background="#FFF8F6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFF8F6"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_16sdp"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="start|center"
                app:srcCompat="@drawable/ic_back"
                app:tint="@color/colorDarkBlue" />


            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_40sdp"
                android:src="@drawable/imgpsh"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    app:tint="@color/colorDarkBlue" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_54sdp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgPrf"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dp" />
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:gravity="right|bottom">
                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_editpic"/>
                </LinearLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intu Metrocenter"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/gilroy_medium"/>

            <TextView
                android:id="@+id/tvUserid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID : IM5236897"
                android:textAlignment="center"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/gilroy_medium"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Name"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:fontFamily="@font/gilroy_medium"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etFirstname"
                    android:layout_width="match_parent"
                    android:background="@drawable/border_shape5"
                    android:layout_height="@dimen/_45sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store ID"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:fontFamily="@font/gilroy_medium"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSoreid"
                    android:layout_width="match_parent"
                    android:background="@drawable/border_shape5"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/changePassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:background="@drawable/border_shape5"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="#FFA623"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_weight="0.2"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    app:tint="#FFA623"
                    app:srcCompat="@drawable/ic_forward" />




            </LinearLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/loginbutton2"
                android:fontFamily="@font/gilroy_medium"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />



        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>





</LinearLayout>