<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFF8F6"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="start|center"
                app:srcCompat="@drawable/ic_menu"
                app:tint="@color/colorDarkBlue" />

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_40sdp"
                android:src="@drawable/imgpsh" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/colorDarkBlue" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/gilroy_medium"-->
<!--            android:text="Select Ride"-->
<!--            android:textColor="@color/colorDarkBlue"-->
<!--            android:textSize="@dimen/_18sdp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRentout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:fontFamily="@font/gilroy_medium"
                android:text="0 Rent Out"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvStorename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:fontFamily="@font/gilroy_medium"
                android:text="Store Name"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/tvrideNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.3"
                android:fontFamily="@font/gilroy_medium"
                android:text="0 Rides Available"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_splash">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnRideAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/gilroy_regular"
                        android:gravity="center"
                        android:text="Available Rides"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


                <!--                <LinearLayout-->
                <!--                    android:id="@+id/btnPendingrides"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="@dimen/_35sdp"-->
                <!--                    android:layout_weight="0.5"-->
                <!--                    android:background="@drawable/button2">-->

                <!--                    <TextView-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:layout_margin="@dimen/_5sdp"-->
                <!--                        android:fontFamily="@font/gilroy_regular"-->
                <!--                        android:gravity="center"-->
                <!--                        android:text="Pending Rides"-->
                <!--                        android:textColor="@color/colorLightGrey"-->
                <!--                        android:textSize="@dimen/_10sdp" />-->


                <!--                </LinearLayout>-->


                <LinearLayout
                    android:id="@+id/btnBookride"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/gilroy_regular"
                        android:gravity="center"
                        android:text="Booked Rides"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnRidehis"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/gilroy_regular"
                        android:gravity="center"
                        android:text="Ride History"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


            </LinearLayout>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/pullToRefresh"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_rideList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_70sdp" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>